<% layout("layouts/boilerplate") %>
    <h1 style="margin-left: 35px;">All tasks</h1>
    <ol>
        <% for(task of tasks){ %>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <div class="card-body" style="margin-left: 20px;">
                            <h5 class="card-title">
                                <li>
                                    <%= task.title %>
                                        <a class="btn btn-primary" href="/tasks/<%= task._id %>">View</a>
                                </li>
                            </h5>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
    </ol>